    <link rel="stylesheet" href="/css/home.css">
</head>
<body class="d-flex text-center text-white bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-auto">
            <div>
                <h3 class="float-md-left mb-0">Price Calculation</h3>
                <nav class="nav nav-masthead justify-content-center float-md-right">
                    <% if(!currentUser) { %>
                        <a class="nav-link text-white" href="/login">Login</a>
                        <a class="nav-link text-white" href="/register">Register</a>
                    <% } else { %>
                        <a class="nav-link text-white" href="/product">Product</a>
                        <a class="nav-link text-white" href="/order">Order</a>
                        <a class="nav-link text-white" href="/payment">Payment</a>
                        <a class="nav-link text-white" href="/cost-type">Cost Type</a>
                        <a class="nav-link text-white" href="/ingridient">Ingridient</a>
                        <a class="nav-link text-white" href="/logout">Logout</a>
                    <% } %>
