<% layout('layouts/boilerplate') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card-body">
                <h4 class="card-title"><%= payment.payment_code %></h4>
                <p><%= payment.payment_category %></p>
                <p>Rp. <%= payment.payment_value %></p>
                <table>
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Payment Date</td>
                            <td> : </td>
                            <td></td>
                            <td> <%= moment(payment.payment_date).format('Y-MM-DD') %> </td>
                        </tr>
                        <tr>
                            <td>Order</td>
                            <td> : </td>
                            <td></td>
                            <td> <a href="/order/<%= payment.order_id._id %>"><%= payment.order_id.order_code %></a> </td>
                        </tr>
                    </tbody>
                </table>

                <div class="row mt-5">
                    <div class="col-6">
                        <a href="/payment/<%= payment._id %>/edit" class="btn btn-warning text-white" style="width: 100%;"><i class="fa fa-edit"></i> Edit</a>
                    </div>
                    <div class="col-6">
                        <form action="/payment/<%= payment._id %>?_method=DELETE" class="d-inline mx-1" method="POST">
                            <button style="width: 100%;" class="btn btn-danger"><i class="fa fa-trash text-white"></i> Delete</button>
                        </form>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>

<script src="/js/ingridient/show.js"></script>