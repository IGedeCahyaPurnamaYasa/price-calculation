<% layout('layouts/boilerplate') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="card-body">
                <h2 class="card-title"><%= product.name %></h2>
                <h4>Rp. <span id="price"><%= product.price %></span></h4>
                <p><%= product.description %></p>
                <table>
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Total Ingridient</td>
                            <td> : </td>
                            <td></td>
                            <td id="sum_ingridient">0</td>
                        </tr>
                        <tr>
                            <td>Total Cost</td>
                            <td> : </td>
                            <td></td>
                            <td id="sum_cost">0</td>
                        </tr>
                        <tr>
                            <td>Total Profit</td>
                            <td> : </td>
                            <td></td>
                            <td id="sum_profit">0</td>
                        </tr>
                        <tr>
                            <td>Adjustment</td>
                            <td> : </td>
                            <td></td>
                            <td id="adjustment">0</td>
                        </tr>
                    </tbody>
                </table>

                <div class="row mt-5">
                    <div class="col-6">
                        <a href="/product/<%= product._id %>/edit" class="btn btn-warning text-white" style="width: 100%;"><i class="fa fa-edit"></i> Edit</a>
                    </div>
                    <div class="col-6">
                        <form action="/product/<%= product._id %>?_method=DELETE" class="d-inline mx-1" method="POST">
                            <button style="width: 100%;" class="btn btn-danger"><i class="fa fa-trash text-white"></i> Delete</button>
                        </form>
                    </div>
                </div>
                
            </div>
        </div>
        <div class="col-md-9">
            <div class="row mb-5">
                <div class="col-12">
                    <div class="card-body">
                        <h5 class="card-title">Ingridients</h5>
                        <div class="table-responsive">
                            <table id="table_ingridient" class="display table" width="100%">
                                <thead>
                                    <tr class="text-center">
                                        <th style="width: 10%;">No</th>
                                        <th style="width: 30%;">Name</th>
                                        <th style="width: 10%;">Qty</th>
                                        <th style="width: 10%;">Unit</th>
                                        <th style="width: 20%;">Price</th>
                                        <th style="width: 20%;">Total</th>
                                    </tr>
                                </thead>
                                <tbody id="table_ingridient_body">
                                    <% for(let i = 0; i < product.ingridients.length; i++ ) { %>
                                        <tr>
                                            <td class="text-center"><%= i+1 %></td>
                                            <td><%= product.ingridients[i].root_ingridient_id ? product.ingridients[i].root_ingridient_id.name : product.ingridients[i].name%></td>
                                            <td class="text-right"><%= product.ingridients[i].qty%></td>
                                            <td class="text-center"><%= product.ingridients[i].unit%></td>
                                            <td class="text-right"><%= product.ingridients[i].price%></td>
                                            <td class="ingridient_total text-right"><%= product.ingridients[i].total%></td>
                                        </tr>
                                    <% } %> 
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-5">
                <div class="col-12">
                    <div class="card-body">
                        <h5 class="card-title">Costs</h5>
                        <div class="table-responsive">
                            <table id="table_cost" class="display table" width="100%">
                                <thead>
                                    <tr class="text-center">
                                        <th style="width: 10%;">No</th>
                                        <th style="width: 70%;">Name</th>
                                        <th style="width: 10%;">Percentage</th>
                                    </tr>
                                </thead>
                                <tbody id="table_cost_body">
                                    <% for(let i = 0; i < product.costs.length; i++ ) { %>
                                        <tr>
                                            <td class="text-center"><%= i+1 %></td>
                                            <td><%= product.costs[i].cost_type_id.name%></td>
                                            <td class="cost_percentage text-center <%= product.costs[i].cost_type_id.type %>"><%= product.costs[i].percentage%></td>
                                        </tr>
                                    <% } %> 
    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/product/show.js"></script>